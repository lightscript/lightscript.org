{
  "parser": "lightscript-eslint",
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "semi": ["error", "never"],
    "react/require-render-return": 0,
    "constructor-super": 0,
    "no-this-before-super": 0
  }
}
